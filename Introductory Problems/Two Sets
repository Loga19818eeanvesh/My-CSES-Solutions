#include <iostream>
 
using namespace std;
 
int main( ) {
    long long int n;
    cin>>n;
    long long int s=(n*(n+1))/2;
    if(s%2==1){cout<<"NO"<<endl;}
    else{
        cout<<"YES"<<endl;
        if(n%2==1){
            cout<<(n/2+1)<<endl;
            cout<<1<<" "<<2<<" ";
            if(4<=n){cout<<4<<" ";}
            int t=7;
            while(t<=n){
                cout<<t<<" ";
                t=t+1;
                if(t<=n){cout<<t<<" ";}
                t=t+3;
            }
            cout<<endl;
            cout<<n/2<<endl;
            cout<<3<<" ";
            t=5;
            while(t<=n){
                cout<<t<<" ";
                t=t+1;
                if(t<=n){cout<<t<<" ";}
                t=t+3;
            }
            cout<<endl;
        }
        else{
            cout<<n/2<<endl;
            cout<<1<<" ";
            int t=4;
            while(t<=n){
                cout<<t<<" ";
                t=t+1;
                if(t<=n){cout<<t<<" ";}
                t=t+3;
            }
            cout<<endl;
            cout<<n/2<<endl;
            t=2;
            while(t<=n){
                cout<<t<<" ";
                t=t+1;
                if(t<=n){cout<<t<<" ";}
                t=t+3;
            }
            cout<<endl;
        }
    }
    return 0;
    }
