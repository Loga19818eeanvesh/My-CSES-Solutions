#include <iostream>
#include <string>
using namespace std;
 
int main( ) {
    string s;
    cin>>s;
    int n=1;
    int temp=1;
    for(int i=1;i<s.length();i++){
        if(s[i]==s[i-1]){temp=temp+1;}
        else{temp=1;}
        if(temp>n){n=temp;}
    }
    cout<<n<<endl;
    return 0;
}
