#include <iostream>
#include <vector>
 
using namespace std;
struct node{
    int a;
    int b;
};
int main( ) {
    int n;
    cin>>n;
    vector<vector<node>> v(16);
    v[0].push_back({1,3});
    v[1].push_back({1,2});
    v[1].push_back({1,3});
    v[1].push_back({2,3});
    int t=3;
    while(t<=n){
        for(int i=0;i<v[t-2].size();i++){
            node n1=v[t-2][i];
            if(n1.a==3 || n1.a==2){
                if(n1.a==2){n1.a=3;}
                else{n1.a=2;}
            }
            if(n1.b==3 || n1.b==2){
                if(n1.b==3){n1.b=2;}
                else{n1.b=3;}
            }
            v[t-1].push_back(n1);
        }
        v[t-1].push_back({1,3});
        for(int i=0;i<v[t-2].size();i++){
            node n1=v[t-2][i];
            if(n1.a==1 || n1.a==2){
                if(n1.a==2){n1.a=1;}
                else{n1.a=2;}
            }
            if(n1.b==1 || n1.b==2){
                if(n1.b==2){n1.b=1;}
                else{n1.b=2;}
            }
            v[t-1].push_back(n1);
        }
        t++;
    }
    cout<<v[n-1].size()<<endl;
    for(int i=0;i<v[n-1].size();i++){
        cout<<v[n-1][i].a<<" "<<v[n-1][i].b<<endl;
    }
    return 0;
}
