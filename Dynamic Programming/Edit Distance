#include <iostream>
#include <string>
using namespace std;
int edit_dp(string s1,string s2){
    int n1=s1.length();
    int n2=s2.length();
    int d[n1+1][n2+1];
    for(int j=0;j<=n2;j++){d[0][j]=j;}
    for(int i=0;i<=n1;i++){d[i][0]=i;}
    int r1;
    int r2;
    int r3;
    int r;
    for(int i=1;i<=n1;i++){
        for(int j=1;j<=n2;j++){
            if(s1[i-1]==s2[j-1]){r1=d[i-1][j-1];}
            else{r1=1+d[i-1][j-1];}
            r2=1+d[i-1][j];
            if(r1<=r2){r=r1;}
            else{r=r2;}
            r3=1+d[i][j-1];
            if(r3<r){r=r3;}
            d[i][j]=r;
        }
    }
    return d[n1][n2];
}
